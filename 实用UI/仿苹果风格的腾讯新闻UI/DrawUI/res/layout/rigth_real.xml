<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/oper_title" 
            >
            <TextView 
                android:gravity="center"
                android:text="服务"
                android:textColor="#000000"
                android:textSize="30dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/booklist_menu_bg_unit">
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="5dip">
               <LinearLayout
                android:id="@+id/ManagerLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="@drawable/lxqg"/>
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="能源管理"
                     android:textSize="20dip"
                     android:layout_marginTop="18dip"
                     android:layout_weight="0.7"
                     android:gravity="center"/>
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/arrow_to_right"
                       android:layout_weight="0.1"
                       android:layout_marginTop="18dip"/>
                </LinearLayout>
                
                <LinearLayout
                android:id="@+id/PeopleMangerLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lxqg"/>
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="人力管理"
                     android:textSize="20dip"
                     android:layout_marginTop="18dip"
                     android:gravity="center"/>
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/arrow_to_right"
                       android:layout_marginTop="18dip"/>
                </LinearLayout>
                <LinearLayout
                android:id="@+id/BusinessMangerLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lxqg"/>
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="商务管理"
                     android:textSize="20dip"
                     android:layout_marginTop="18dip"
                     android:gravity="center"/>
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/arrow_to_right"
                       android:layout_marginTop="18dip"/>
                </LinearLayout>
                <LinearLayout
                android:id="@+id/FinaceMangerLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lxqg"/>
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="金融管理"
                     android:textSize="20dip"
                     android:layout_marginTop="18dip"
                     android:gravity="center"/>
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/arrow_to_right"
                       android:layout_marginTop="18dip"/>
                </LinearLayout>
                <LinearLayout
                android:id="@+id/ShoppingMangerLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lxqg"/>
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="采购管理"
                     android:textSize="20dip"
                     android:layout_marginTop="18dip"
                     android:gravity="center"/>
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/arrow_to_right"
                       android:layout_marginTop="18dip"/>
                </LinearLayout>
                <LinearLayout
                android:id="@+id/ProviderMangerLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lxqg"/>
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="供应管理"
                     android:textSize="20dip"
                     android:layout_marginTop="18dip"
                     android:gravity="center"/>
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/arrow_to_right"
                       android:layout_marginTop="18dip"/>
                </LinearLayout>
                 <LinearLayout
                android:id="@+id/ProjectMangerLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lxqg"/>
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="项目管理"
                     android:textSize="20dip"
                     android:layout_marginTop="18dip"
                     android:gravity="center"/>
                   <ImageView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/arrow_to_right"
                       android:layout_marginTop="18dip"/>
                </LinearLayout>
                
           </LinearLayout>
         </ScrollView>
</LinearLayout>
