<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
         <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="60px"
             android:background="@drawable/food_info_title_background"
             android:orientation="horizontal"
             >
             <Button 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/btn_back"
                 android:id="@+id/backlistbtn"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:background="#EFF14B"
             >
             <ImageView 
                 android:layout_width="185px"
                 android:id="@+id/foodinfoimage"
                 android:layout_height="wrap_content"
                 />
             <TextView 
                 android:id="@+id/foodinfotextview"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#000000"
                 android:layout_marginTop="30px"
                 android:text="猪肉是目前人们餐桌上最常见的肉类食物之一，猪瘦肉中富含铁，容易被人体吸收，能预防贫血。猪肉味甘咸，性平，有补虚、滋阴、养血、润燥的功效"
                 />
         </LinearLayout>
         <ImageView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/food_info_middle_background"/>
</LinearLayout>
