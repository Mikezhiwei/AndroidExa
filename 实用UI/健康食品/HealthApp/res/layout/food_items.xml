<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
        
      <ImageView
          android:layout_marginTop="10px" 
          android:id="@+id/foodimage"
          android:layout_width="150px"
          android:layout_height="100px"
          android:src="@drawable/pork"
          android:layout_weight="40"
          android:background="#36C9A7"
          />
      <LinearLayout 
          android:layout_width="wrap_content"
          android:layout_height="100px"
          android:layout_margin="20px"
          android:layout_marginLeft="80px"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="60">
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="食品名称"
                 android:textColor="#FFFFFF"
                 android:background="#EE3911"/>
             <TextView 
                 android:id="@+id/foodname"
                 android:layout_width="200px"
                 android:layout_height="wrap_content"
                android:text="猪肉"
                android:textSize="20px"
                android:gravity="center"
                 android:background="#A6D043"
                android:textColor="#000000"
                
               />
             </LinearLayout>
             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="不宜搭配:"
                 android:textColor="#000000"
                 android:background="#AA0ADB"/>
             <TextView android:id="@+id/foodinfo"
                 android:layout_width="200px"
                 android:layout_height="wrap_content"
                 android:text="经常吃"
                 android:gravity="center"
                 android:textSize="20px"
                 android:textColor="#000000"
                 android:background="#3AD992"
                 />
              </LinearLayout>
             <ImageView 
                 android:id="@+id/foodlead"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:src="@drawable/expand"
                 />
             </LinearLayout>
</LinearLayout>
